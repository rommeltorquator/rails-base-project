<div class="container" style="margin-top: 100px">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group mb-3">
    <%= f.label :email, class:"input-group-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

    <div class="input-group mb-3">
    <%= f.label :password, class:"input-group-text" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class:"form-check-input", type:"checkbox" %>
      <%= f.label :remember_me , class:"form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>  
  </div>
<% end %>
<br/>
<br/>
Dont have an account with us? Or you may have forgotten your password. Click here <%= render "devise/shared/links" %>
</div>
<footer class="text-center text-white fixed-bottom" style="background-color: #21081a;">
  <%= render 'partials/footer_slim'%>
</footer>

