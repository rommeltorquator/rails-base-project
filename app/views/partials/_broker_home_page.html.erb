<h1 class="text-center" style="margin-top: 10px;"><%= current_broker.first_name %>'s Buyer Dashboard</h1>
<h2 class="text-center"><%= render 'partials/stock_ticker'%></h2>
<hr class="border border-3 colorgraph" style="margin-top: 10px;">
<!-- 1st table transactions -->
  <div class="container">
    <div class="card">
      <div class="card-header">Daily Transactions</div>
      <div class="card-body">
        <h5 class="card-title">Check Today's transactions</h5>
        <p class="card-text">
          Let's start earning you more money by going to your transactions.
          In the meantime, here's a quick view of your current transactions.
        </p>
        <% if current_broker.purchase_transactions.count > 0 %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Transaction id</th>
                <th>Buyer</th>
                <th>Symbol</th>
                <th>Company Name</th>
                <th>Current Price</th>
                <th>Total Stock purchased</th>
                <th>Total Amount</th>
                <th>Broker</th>
              </tr>
            </thead>
            <tbody class="table-striped">
              <% current_broker.purchase_transactions.limit(3).each do |transaction| %>
                <tr class="table-striped">
                  <td><%= transaction.id %></td>
                  <td><%= transaction.user.first_name + " " + transaction.user.last_name %></td>
                  <td><%= transaction.stock_code %></td>
                  <td><%= transaction.company_name %></td>
                  <td><%= transaction.price %></td>
                  <td><%= transaction.volume %></td>
                  <td><%= transaction.volume * transaction.price %></td>
                  <td><%= transaction.broker.first_name + " " + transaction.broker.last_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "View Detailed Transactions", transaction_home_index_path, class:"btn btn-primary" %>            
        <% else %>
          <h3 class="text-center">No transactions</h3>
        <% end %>
      </div>
    </div>
  </div>
<!-- end 1st table -->

<!-- 3rd table buyer list -->
  <div class="container" style="margin-top: 10px;">
    <div class="card-group">
      <div class="card col-md-12" style="padding: 10px;">
        <div class="card-header">Portfolio</div>
        <div class="card-body">
          <h5 class="card-title">Portfolio Quick view</h5>
          <p class="card-text">
            Portfolio Quick View are your top earning stocks.
          </p>
          <% if current_broker.stocks.count > 0 %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Symbol</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">broker</th>
                </tr>
              </thead>
              <tbody>
                <% current_broker.stocks.limit(3).each do |stock| %>
                  <tr class="table-striped">
                    <td><%= stock.symbol %></td>
                    <td><%= stock.name %></td>
                    <td><%= stock.current_price %></td>
                    <td><%= current_broker.email %></td>
                  </tr>
                <% end %>
            </table>
            <%= link_to "View Details", portfolio_home_index_path, class:"btn btn-primary" %>
          <% else %>
            <h3 class="text-center">No stock portfolio available</h3>
          <% end %>
      </div>
    </div>
  </div>
<!-- end 3rd table -->